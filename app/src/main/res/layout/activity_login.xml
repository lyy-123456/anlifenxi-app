<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_background_01"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆页"
        android:textColor="#fff"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_account"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="用户名"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />


    <TextView
        android:id="@+id/tv_name_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="请输入您的手机号"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
        <ImageButton
            android:id="@+id/btn_openpwd"
            android:layout_gravity="center|right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/visible"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_pass_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="密码由8-12位的数字或字母组成"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_pass"
            android:layout_below="@+id/edit_pass"
            android:layout_marginLeft="70dp"
            android:text="记住密码" />

        <CheckBox
            android:id="@+id/check_voluntarily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/check_remember"
            android:layout_alignBottom="@+id/check_remember"
            android:layout_alignRight="@+id/edit_pass"
            android:layout_marginLeft="70dp"
            android:text="自动登录" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="25dp">
        <TextView
            android:id="@+id/text_msg"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="忘记密码？"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有帐号？请"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_register"
            android:background="@drawable/btn_bg2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="注册"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btn_setting"
            android:background="@drawable/btn_bg2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="设置"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>
